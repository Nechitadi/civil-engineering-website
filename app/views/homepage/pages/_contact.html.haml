.bg-first
  .container.contact-page-container.pb-5
    %h3.text-center Contact us
    .row.justify-content-center
      .col-sm-12.col-md-6.bg-second.pt-3.form-container
        = form_for :lead, url: { action: 'create', controller: 'leads' } do |f|
          .row.form-group
            .col
              = f.text_field :first_name, placeholder: 'First Name', type: 'text', class: 'form-control'
            .col
              = f.text_field :last_name, placeholder: 'Last Name', type: 'text', class: 'form-control'
          .row.form-group
            .col
              = f.text_field :phone, placeholder: 'Phone', type: 'text', class: 'form-control'
            .col
              = f.text_field :email, placeholder: 'Email', type: 'text', class: 'form-control'
          .row.form-group
            .col
              = f.text_field :company, placeholder: 'Company', type: 'text', class: 'form-control'
          .row.form-group
            .col
              = f.text_area :description, placeholder: 'Project Description', type: 'text', class: 'form-control', rows: '5'

          .row.form-group
            .col
              = f.submit 'Send', class: 'btn btn-dark float-right'
